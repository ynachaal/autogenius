RewriteEngine On

# ================================================================
# If the request is NOT already going to /public/, send it there.
# This lets users visit https://cc.wlslab.com instead of /public/
# ================================================================

# Skip if already accessing /public/
RewriteCond %{REQUEST_URI} !^/public/

# If the requested file exists inside /public, serve it directly
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
RewriteRule ^(.*)$ public/$1 [L]

# Otherwise, route everything to Laravel's front controller
RewriteRule ^ public/index.php [L]

# ================================================================
# PHP handler (keep this block)
